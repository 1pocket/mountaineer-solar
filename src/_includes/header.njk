<header class="masthead">
  <div class="container masthead-inner">
    <a href="/" class="brand" aria-label="{{ site.name }} home">
      <img src="/assets/img/logo.svg" alt="{{ site.name }} logo" class="logo">
      <div class="brandlines">
        <span class="site-name">Mountaineer Solar</span>
        <span class="tagline">{{ site.tagline }}</span>
      </div>
    </a>
    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger"></span>
    </button>
    <nav class="main-nav" aria-label="Primary">
      <a href="/"{% if page.url == "/" %} aria-current="page"{% endif %}>Home</a>
      <a href="/about/"{% if page.url == "/about/" %} aria-current="page"{% endif %}>About</a>
      <a href="/how-it-works/"{% if page.url == "/how-it-works/" %} aria-current="page"{% endif %}>How It Works</a>
      <a href="/calculator/"{% if page.url == "/calculator/" %} aria-current="page"{% endif %}>Calculator</a>
      <a href="/contact/"{% if page.url == "/contact/" %} aria-current="page"{% endif %}>Get Matched</a>
    </nav>
  </div>
</header>
