<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description }}">
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph -->
  <meta property="og:type" content="{{ ogType | default('website') }}">
  <meta property="og:site_name" content="{{ site.name }}">
  <meta property="og:title" content="{{ title }} | {{ site.name }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="{{ site.url }}/assets/img/og-default.jpg">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }} | {{ site.name }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="{{ site.url }}/assets/img/og-default.jpg">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Libre+Baskerville:wght@400;700&family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="icon" type="image/svg+xml" href="/assets/img/logo.svg">

  <!-- GA4 -->
  {% if site.ga4Id != "G-XXXXXXXXXX" %}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.ga4Id }}"></script>
  <script>
    window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}
    gtag('js',new Date());gtag('config','{{ site.ga4Id }}');
  </script>
  {% endif %}

  <!-- Microsoft Clarity -->
  {% if site.clarityId != "CLARITY_PROJECT_ID" %}
  <script>
    (function(c,l,a,r,i,t,y){c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
    t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
    y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window,document,"clarity","script","{{ site.clarityId }}");
  </script>
  {% endif %}

  <!-- Schema.org Organization (all pages) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ site.name }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/assets/img/logo.svg",
    "description": "West Virginia's solar marketplace connecting homeowners with vetted local solar installers.",
    "areaServed": { "@type": "State", "name": "West Virginia" },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "{{ site.phoneFull }}",
      "contactType": "customer service"
    }
  }
  </script>
  {% block schema %}{% endblock %}
</head>
<body>
  <a class="skip" href="#main">Skip to content</a>

  {% include "header.njk" %}

  <main id="main">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <script defer src="/assets/js/main.js"></script>
  {% block scripts %}{% endblock %}
</body>
</html>
