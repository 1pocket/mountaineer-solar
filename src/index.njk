{# ---- BLOG TEASERS ---- #}
{% set latestPosts = collections.posts | limit(3) %}
{% if latestPosts.length %}
<section class="blog-teasers">
  <div class="container">
    <h2>Solar Guides for West Virginia</h2>
    <div class="grid-3">
      {% for post in latestPosts %}
      <a class="card teaser-card" href="{{ post.url }}">
        <h4>{{ post.data.title }}</h4>
        <p class="teaser-meta">{{ post.date | readableDate }}</p>
        <p>{{ post.data.description }}</p>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

